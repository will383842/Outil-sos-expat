{
  "name": "sos-expats-admin",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Plateforme d'administration SOS Expats avec intégration ChatGPT sécurisée",
  "author": "SOS Expat",
  "license": "UNLICENSED",
  "keywords": [
    "react",
    "typescript",
    "firebase",
    "admin",
    "pwa"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "vite build && npm run build:functions",
    "build:pages": "vite build",
    "build:strict": "npm run type-check && vite build && npm run build:functions",
    "build:functions": "cd functions && npm run build",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview --host",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "deploy:functions": "npm run build:functions && firebase deploy --only functions",
    "clean": "rm -rf dist node_modules/.vite"
  },
  "dependencies": {
