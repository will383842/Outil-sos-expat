rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return request.auth != null && request.auth.token.role == 'admin'; }

    match /uploads/{uid}/{allPaths=**} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
      allow write: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
