{
  "version": 1,
  "app": "SOS Expat",
  "schema": "sos-expat.message.template/v1",
  "locale": "ru",
  "defaults": {
    "from_email": "SOS Expat <no-reply@sos-expat.app>",
    "reply_to": "Поддержка SOS Expat <support@sos-expat.app>",
    "sms_sender_id": "SOSXPAT",
    "push_icon": "ic_notification",
    "push_channel_id": "general",
    "deeplink_base": "sos-expat://"
  },
  "templates": [
    {
      "id": "call.scheduled.provider",
      "roles": ["provider"],
      "channels": {
        "email": false,
        "sms": false,
        "push": false,
        "inapp": true,
        "whatsapp": false
      },
      "inapp": {
        "title": "Звонок запланирован",
        "body": "Звонок с {{clientName}} через 5 минут",
        "action": {
          "label": "Смотреть",
          "deeplink": "/provider/dashboard"
        }
      }
    },
    {
      "id": "call.scheduled.client",
      "roles": ["client"],
      "channels": {
        "email": false,
        "sms": false,
        "push": false,
        "inapp": true,
        "whatsapp": false
      },
      "inapp": {
        "title": "Звонок запланирован",
        "body": "Ваш звонок с {{providerName}} по теме «{{title}}» подтверждён",
        "action": {
          "label": "Смотреть",
          "deeplink": "/calls"
        }
      }
    },
    {
      "id": "booking_paid_provider",
      "roles": ["provider"],
      "channels": {
        "email": false,
        "sms": true,
        "push": false,
        "inapp": true,
        "whatsapp": false
      },
      "sms": {
        "text": "SOS Expat: Новое бронирование!\n\nКлиент: {{client.firstName}}\nНациональность: {{client.nationality}}\nСтрана вмешательства: {{request.country}}\nЯзыки общения: {{clientLanguagesFormatted}}\n\nТема: {{request.title}}\nПодробности: {{request.description}}\n\nЗа этот звонок вы заработаете {{providerEarnings}}{{currencySymbol}} (может немного варьироваться в зависимости от курса обмена вашего банка).\n\nВойдите в свой инструмент ИИ для помощи с ответами.\n\n⚠️ ВНИМАНИЕ: Если вы не ответите на звонок, вы будете автоматически переведены в офлайн и вам придётся переподключиться вручную. Это также повлияет на вашу оценку видимости."
      },
      "inapp": {
        "title": "Новое оплаченное бронирование",
        "body": "{{client.firstName}} ({{request.country}}) - {{request.title}}",
        "action": {
          "label": "Смотреть",
          "deeplink": "/provider/dashboard"
        }
      }
    }
  ]
}
