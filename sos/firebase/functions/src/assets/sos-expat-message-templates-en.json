      "id": "payment.capture_failed.client",
      "roles": ["client"],
      "channels": { "email": true, "sms": false, "push": false, "inapp": true, "whatsapp": false },
      "email": {
        "subject": "SOS Expat: Issue with your payment",
        "html": "<h2>Payment Issue</h2><p>Hello,</p><p>A technical issue occurred while finalizing the payment for your consultation.</p><p><strong>Don't worry</strong> ‚Äî your card has not been charged. Our team has been alerted and is handling the issue as a priority.</p><p>We will contact you shortly.</p><p>Best regards,<br>The SOS Expat team</p>"
      },
      "inapp": { "title": "Payment issue", "body": "A technical issue occurred. Our team has been alerted.", "action": { "label": "Contact", "deeplink": "/support" } }
    },
    {
      "id": "payment.capture_failed.provider",
      "roles": ["provider"],
      "channels": { "email": true, "sms": false, "push": false, "inapp": true, "whatsapp": false },
      "email": {
        "subject": "SOS Expat: Payment issue for a consultation",
        "html": "<h2>Payment Issue</h2><p>Hello,</p><p>A technical issue occurred while finalizing the payment for your recent consultation.</p><p><strong>Your service has been recorded</strong>. Our team is handling the issue and you will be paid as soon as the payment is resolved.</p><p>Best regards,<br>The SOS Expat team</p>"
      },
      "inapp": { "title": "Payment issue", "body": "A technical issue occurred. Your payment will be resolved.", "action": { "label": "View", "deeplink": "/provider/dashboard" } }
