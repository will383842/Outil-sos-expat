{
  "indexes": [
    {
      "__comment": "Index pour ai_call_logs - monitoring usage par provider",
      "collectionGroup": "ai_call_logs",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "provider", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "ASCENDING" }
      ]
    },
    {
      "__comment": "Index pour system_logs - type + createdAt (cleanup logs)",
      "collectionGroup": "system_logs",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "type", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "ASCENDING" }
      ]
    },
    {
      "__comment": "Index pour system_logs - type + createdAt DESC (storage_stats, backup)",
      "collectionGroup": "system_logs",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "type", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    },
    {
      "__comment": "Index pour system_logs - executionTimeMs + createdAt",
      "collectionGroup": "system_logs",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "createdAt", "order": "ASCENDING" },
        { "fieldPath": "executionTimeMs", "order": "ASCENDING" }
      ]
    },
    {
      "__comment": "Index pour system_alerts - alertes non-acquittées triées par date",
      "collectionGroup": "system_alerts",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "acknowledged", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    },
    {
      "__comment": "Index pour le debounce du trigger auto-sync prix Stripe",
      "collectionGroup": "stripe_sync_logs",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "planId", "order": "ASCENDING" },
        { "fieldPath": "action", "order": "ASCENDING" },
        { "fieldPath": "timestamp", "order": "DESCENDING" }
      ]
    },
    {
      "__comment": "Index principal pour Providers et ProfileCarousel - filtrage par langue",
      "collectionGroup": "sos_profiles",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "isApproved", "order": "ASCENDING" },
        { "fieldPath": "isVisible", "order": "ASCENDING" },
        { "fieldPath": "languages", "arrayConfig": "CONTAINS" }
      ]
    },
    {
      "__comment": "Index avec tri par date de création",
      "collectionGroup": "sos_profiles",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "isApproved", "order": "ASCENDING" },
        { "fieldPath": "isVisible", "order": "ASCENDING" },
        { "fieldPath": "languages", "arrayConfig": "CONTAINS" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    },
    {
      "__comment": "Index pour AdminApprovals - filtrage par statut d'approbation",
      "collectionGroup": "sos_profiles",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "type", "order": "ASCENDING" },
        { "fieldPath": "approvalStatus", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    },
    {
      "__comment": "Index pour pending_transfers - filtrage par statut et tri par date",
      "collectionGroup": "pending_transfers",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "status", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    }
  ],
  "fieldOverrides": []
}
