{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/*/avocat-*/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/*/lawyer-*/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/*/abogado-*/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/*/anwaelte-*/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/*/advogado-*/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/*/advokat-*/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/*/expatrie-*/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/*/expat-*/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/avocat/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/lawyers/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/expatrie/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "/expats/**",
        "function": "renderForBots",
        "region": "europe-west1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "firebase/functions",
      "codebase": "default",
      "runtime": "nodejs20",
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"],
      "ignore": [
        "node_modules",
        ".git",
        "**/*.test.*",
        "**/*.spec.*",
        "src",
        "*.log",
        "tmpclaude-*",
        "backups"
      ]
    }
  ],
  "emulators": {
    "auth": { "port": 9099 },
    "functions": { "port": 5001 },
    "firestore": { "port": 8080 },
    "storage": { "port": 9199 },
    "ui": { "enabled": true, "port": 4002, "host": "127.0.0.1" },
    "hub": { "port": 4402 },
    "logging": { "port": 4502 },
    "singleProjectMode": true
  }
}
