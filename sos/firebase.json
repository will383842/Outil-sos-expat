{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "firebase/functions",
      "codebase": "default",
      "runtime": "nodejs20",
      "ignore": [
        "node_modules/**",
        ".git/**",
        "**/*.test.*",
        "**/*.spec.*"
      ]
    }
  ],
  "emulators": {
    "auth": { "port": 9099 },
    "functions": { "port": 5001 },
    "firestore": { "port": 8080 },
    "storage": { "port": 9199 },
    "ui": { "enabled": true, "port": 4002, "host": "127.0.0.1" },
    "hub": { "port": 4402 },
    "logging": { "port": 4502 },
    "singleProjectMode": true
  }
}
