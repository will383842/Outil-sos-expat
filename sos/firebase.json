{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "firebase/functions",
      "codebase": "default",
      "runtime": "nodejs22",
      "discoveryTimeout": 180000,
      "ignore": [
        "node_modules",
        ".git",
        "**/*.test.*",
        "**/*.spec.*",
        "*.log",
        "tmpclaude-*",
        "backups",
        "**/*.js.map",
        "scripts",
        "*.sh",
        "*.ps1",
        "*.md",
        "jest.config.js",
        "testProduction.js",
        "createCallSession.js",
        "check-invalid-slugs.js",
        "quick-fix.js",
        "deploy-by-batch.js",
        "deploy-multipass.js",
        "deploy-missing.js",
        "migrate-affiliate-to-west2.js",
        "__tests__"
      ]
    }
  ],
  "emulators": {
    "auth": { "port": 9099 },
    "functions": { "port": 5001 },
    "firestore": { "port": 8080 },
    "storage": { "port": 9199 },
    "ui": { "enabled": true, "port": 4002, "host": "127.0.0.1" },
    "hub": { "port": 4402 },
    "logging": { "port": 4502 },
    "singleProjectMode": true
  }
}
