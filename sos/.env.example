# ===========================================
# SOS-EXPAT Environment Variables Example
# ===========================================
# Copy this file to .env and fill in your values

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Google Analytics 4 & Tag Manager
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GTM_ID=GTM-XXXXXXX

# Google Ads Conversion Tracking
# Get these from Google Ads > Tools > Conversions > Your conversion action
VITE_GOOGLE_ADS_CONVERSION_ID=AW-XXXXXXXXXX
VITE_GOOGLE_ADS_PURCHASE_LABEL=XXXXXXXXXXXXXXXXXXX
VITE_GOOGLE_ADS_LEAD_LABEL=XXXXXXXXXXXXXXXXXXX
VITE_GOOGLE_ADS_SIGNUP_LABEL=XXXXXXXXXXXXXXXXXXX
VITE_GOOGLE_ADS_CHECKOUT_LABEL=XXXXXXXXXXXXXXXXXXX

# Firebase Cloud Messaging (Push Notifications)
# Generate VAPID key in Firebase Console > Project Settings > Cloud Messaging > Web Push certificates
VITE_FIREBASE_VAPID_KEY=your_vapid_public_key

# Functions Regions
VITE_FUNCTIONS_REGION=europe-west1
VITE_FUNCTIONS_AFFILIATE_REGION=us-central1  # Affiliate/Marketing (chatter, influencer, blogger, groupAdmin) - Load balancing
VITE_FUNCTIONS_PAYMENT_REGION=europe-west3
VITE_FUNCTIONS_TRIGGERS_REGION=europe-west3

# Emulators (development only)
VITE_USE_EMULATORS=false

# Stripe Configuration
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# PayPal Configuration
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
VITE_PAYPAL_MODE=sandbox

# reCAPTCHA v3 (Anti-bot protection for Chatter registration)
# Get your keys at: https://www.google.com/recaptcha/admin
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key

# Sentry Error Monitoring
# Create a project at https://sentry.io and get the DSN
VITE_SENTRY_DSN=https://your_key@your_org.ingest.sentry.io/your_project_id

# Outil SOS Expat (IA Tool - second Firebase project)
VITE_OUTIL_FIREBASE_API_KEY=your_outil_firebase_api_key
VITE_OUTIL_FIREBASE_APP_ID=your_outil_firebase_app_id
# Optional â€” defaults to hardcoded values if not set:
# VITE_OUTIL_FIREBASE_AUTH_DOMAIN=outils-sos-expat.firebaseapp.com
# VITE_OUTIL_FIREBASE_PROJECT_ID=outils-sos-expat
# VITE_OUTIL_FIREBASE_STORAGE_BUCKET=outils-sos-expat.firebasestorage.app
# VITE_OUTIL_FIREBASE_MESSAGING_SENDER_ID=694506867593
# VITE_OUTIL_BASE_URL=https://ia.sos-expat.com

# Social Media Links (optional)
# VITE_FACEBOOK_URL=https://facebook.com/sosexpat
# VITE_TWITTER_URL=https://twitter.com/sosexpat
# VITE_LINKEDIN_URL=https://linkedin.com/company/sosexpat

# Environment
NODE_ENV=development
